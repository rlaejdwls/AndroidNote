<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:flexWrap="wrap">
    <Button
        android:id="@+id/btn_number_selector"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@drawable/color_default_button_selector"
        android:text="@string/btn_number_selector"
        app:layout_flexGrow="1"/>
    <Button
        android:id="@+id/btn_flexible_image_view"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@drawable/color_default_button_selector"
        android:text="@string/btn_flexible_image_view"
        app:layout_flexGrow="1"/>
    <Button
        android:id="@+id/btn_spannable_grid_view"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@drawable/color_default_button_selector"
        android:text="@string/btn_spannable_grid_view"
        app:layout_flexGrow="1"/>
    <Button
        android:id="@+id/btn_progress_button"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@drawable/color_default_button_selector"
        android:text="@string/btn_progress_button"
        app:layout_flexGrow="1"/>
    <Button
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@drawable/color_default_button_selector"
        android:text="테스트-02"
        app:layout_flexGrow="1"/>
</com.google.android.flexbox.FlexboxLayout>