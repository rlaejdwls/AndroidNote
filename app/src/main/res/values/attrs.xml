<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressButton">
        <attr name="cpv_progress" format="float" />
        <attr name="cpv_maxProgress" format="float" />
        <attr name="cpv_animDuration" format="integer" />
        <attr name="cpv_animSwoopDuration" format="integer" />
        <attr name="cpv_animSyncDuration" format="integer" />
        <attr name="cpv_color" format="color"/>
        <attr name="cpv_thickness" format="dimension"/>
        <attr name="cpv_indeterminate" format="boolean" />
        <attr name="cpv_animAutostart" format="boolean" />
        <attr name="cpv_animSteps" format="integer" />
        <attr name="cpv_startAngle" format="float" />
        <attr name="cpv_marginTop" format="dimension" />
        <attr name="cpv_marginBottom" format="dimension" />
        <attr name="cpv_marginLeft" format="dimension" />
        <attr name="cpv_marginRight" format="dimension" />
        <attr name="cpv_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleProgressButton">
        <attr name="cpb_progress" format="float" />
        <attr name="cpb_maxProgress" format="float" />
        <attr name="cpb_animDuration" format="integer" />
        <attr name="cpb_animSwoopDuration" format="integer" />
        <attr name="cpb_animSyncDuration" format="integer" />
        <attr name="cpb_color" format="color"/>
        <attr name="cpb_thickness" format="dimension"/>
        <attr name="cpb_indeterminate" format="boolean" />
        <attr name="cpb_animAutoStart" format="boolean" />
        <attr name="cpb_animSteps" format="integer" />
        <attr name="cpb_startAngle" format="float" />
        <attr name="cpb_marginTop" format="dimension" />
        <attr name="cpb_marginBottom" format="dimension" />
        <attr name="cpb_marginLeft" format="dimension" />
        <attr name="cpb_marginRight" format="dimension" />
        <attr name="cpb_margin" format="dimension" />
    </declare-styleable>

    <color name="cpv_default_color">#2196F3</color>
    <dimen name="cpv_default_thickness">4dp</dimen>
    <integer name="cpv_default_progress">0</integer>
    <integer name="cpv_default_max_progress">100</integer>
    <bool name="cpv_default_is_indeterminate">false</bool>
    <bool name="cpv_default_anim_autostart">false</bool>
    <integer name="cpv_default_anim_duration">4000</integer>
    <integer name="cpv_default_anim_swoop_duration">5000</integer>
    <integer name="cpv_default_anim_sync_duration">500</integer>
    <integer name="cpv_default_anim_steps">3</integer>
    <integer name="cpv_default_start_angle">-90</integer>
</resources>